# ( f.n ) finds files with a specific name # ·e·
# = USE = f.n myfile.txt # ·e·
alias 'f.n'='find . -type f -name' # ·a·

# ( f.s ) finds directories with a specific name # ·e·
# USE = f.s mydir # ·e·
alias 'f.s'='find . -type d -name' # ·a·

# ( f.x ) finds files with a specific extension # ·e·
# USE = f.x *.jpg # ·e·
alias 'f.x'='find . -type f -name' # ·a·

# ( f.s ) finds files with a specific size # ·e·
# USE = f.s +1M # ·e·
alias 'f.s'='find . -type f -size' # ·a·

# ( f.m ) finds files modified after a specific date and time # ·e·
# USE = f.m "2023-01-01 00:00:00" # ·e·
alias 'f.m'='find . -type f -newermt' # ·a·

# ( f.min ) finds files modified within a specific number of minutes # ·e·
# USE = f.min -60 # ·e·
alias 'f.min'='find . -type f -mmin' # ·a·

# ( f.str ) finds files containing a specific string # ·e·
# ( i.e.) = f.str 'search_string' # ·e·
alias 'f.str'='grep -r' # ·a·

# ( f.user ) finds files owned by a specific user # ·e·
# ( i.e.) = f.user username # ·e·
alias 'f.user'='find . -type f -user' # ·a·

# ( f.perm ) finds files with specific permissions # ·e·
# ( i.e.) = f.user 644 # ·e·
alias 'f.user'='find . -type f -perm' # ·a·

# ( f.user ) finds empty directories # ·e·
# USE = f.user # ·e·
alias 'f.user'='find . -type d -empty' # ·a·

