# ·o· ·· START ·· = { make a backup of file given as parameter with timestamp }
# ·o·
bk() { # ·o·
  # ·o·
  # ·o· = alias = .bk
  # ·o·
  cp "$1" "$1_$(date '+%Y%m%d%H%M%S').bak" # ·o· 
} # ·o· 
# ·o·
# ·o· ··  END  ·· = { make... }
# ·o·

# ·o· ·· START ·· = { create folder recursively and enter them }
# ·o·
cf() { # ·o·
  # ·o·
  # ·o· = alias = .cf
  # ·o·
  mkdir -p "$1" && cd "$1" # ·o·
} # ·o· 
# ·o· ··  END  ·· = { create... }
# ·o·

# ·o· ·· START ·· = { searchs for string and replace the in file }
# ·o·
sr() { # ·o·
  # ·o·
  # ·o· = alias = .sr
  # ·o·
  sed -i "s/$1/$2/g" "$3" # ·o· 
} # ·o· 
# ·o·
# ·o· ··  END  ·· = { searchs... }
# ·o·

