alias '.as'='.ali.setup' #-#-#
#-#-# 
#Alias Entry Point #-#-#
if [ -f ~/.aliases/.ali.aliases ]; then #-#-#
.  ~/.aliases/.ali.aliases #-#-# 
fi #-#-#
 #-#-#
