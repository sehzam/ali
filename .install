alias '.ali.setup'='cd ~ && wget https://github.com/sehzam/ali/archive/refs/heads/main.zip && unzip main.zip && rm main.zip && . ~/ali-main/.setup && . ~/.bashrc' #-#-#
alias '.as'='.ali.setup' #-#-#
#-#-# 
