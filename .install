remove_string_from_file() {
    local search_string=$1
    local file_path=$2
    if grep -q "$search_string" "$file_path"; then
        sed -i "/$search_string/d" "$file_path"
    fi
}
bashrc_path="$HOME/.bashrc"
ss_1="#·#·#"
remove_string_from_file "$ss_1" "$bashrc_path"
if ! grep -q "$ss_1" "$bashrc_path"; then
echo " #·#·#" >> ~/.bashrc
echo "# Aliases Loader #·#·#" >> ~/.bashrc
echo 'alias ".ali.setup"="cd ~ && wget https://github.com/sehzam/ali/archive/refs/heads/main.zip && unzip main.zip && rm main.zip && source ~/ali-main/.setup && source ~/.bashrc" #·#·#' >> ~/.bashrc
echo 'alias ".as"=".ali.setup" #·#·#' >> ~/.bashrc
echo " #·#·#" >> ~/.bashrc 
echo "#Alias Entry Point #·#·#" >> ~/.bashrc
echo "if [ -f ~/.aliases/.ali.aliases ]; then #·#·#" >> ~/.bashrc
echo "source  ~/.aliases/.ali.aliases #·#·#" >> ~/.bashrc 
echo "fi #·#·#" >> ~/.bashrc
echo " #·#·#" >> ~/.bashrc
echo "# Grep Custom Color #·#·#" >> ~/.bashrc
